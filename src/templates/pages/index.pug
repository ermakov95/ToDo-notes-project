extends ../layouts/main

block variables
  - var title = 'ToDo';
  - var description = 'ToDo';

block content
  .wrap.main-page
    .buttons
      button.new-note Новая заметка
      button.save-note Сохранить изменения
      button.cancel-note Отменить редактирование
      button.delete-note Удалить заметку
    .notes
    .edit
      .edit__info *Добавьте название заметки и минимум 1 непустой todo
      input.edit__title(type="text", placeholder="Название заметки*")
      .edit__todos
      button.edit__add-todo Добавить новый todo
  .popup
    .popup-inner
      .popup__question Вы уверены что хотите 
        span отменить редактирование?
        span удалить заметку?
      .popup__buttons 
        button.popup__yes Да
        button.popup__no Нет